{% macro replaceElements(text, default = {}) %}
	{{ text | replace({
		'<h1' : '<h1 class="' ~ (default['h1'] is defined ? default['h1'] : "h1") ~ '"',
		'<h2' : '<h2 class="' ~ (default['h2'] is defined ? default['h2'] : "h2") ~ '"',
		'<h3' : '<h3 class="' ~ (default['h3'] is defined ? default['h3'] : "h3") ~ '"',
		'<h4' : '<h4 class="' ~ (default['h4'] is defined ? default['h4'] : "h4") ~ '"',
		'<h5' : '<h5 class="' ~ (default['h5'] is defined ? default['h5'] : "h5") ~ '"',
		'<h6' : '<h6 class="' ~ (default['h6'] is defined ? default['h6'] : "h6") ~ '"',
		'<p' : '<p class="' ~ (default['p'] is defined ? default['p'] : "p") ~ '"',
		'<ol' : '<ol class="' ~ (default['ol'] is defined ? default['ol'] : "") ~ '"',
		'<ul' : '<ul class="' ~ (default['ul'] is defined ? default['ul'] : "") ~ '"',
		'<li' : '<li class="' ~ (default['li'] is defined ? default['li'] : "") ~ '"',
		'<a': '<a class="' ~ (default['a'] is defined ? default['a'] : "a") ~ '"',
		'<span' : '<span class="' ~ (default['span'] is defined ? default['span'] : "span") ~ '"',
		'<blockquote' : '<blockquote class="' ~ (default['blockquote'] is defined ? default['blockquote'] : "blockquote") ~ '"',
		'<table' : '<table class="' ~ (default['table'] is defined ? default['table'] : "table") ~ '"',
		'<strong' : '<strong class="' ~ (default['strong'] is defined ? default['strong'] : "strong") ~ '"',
	}) | raw }}
{% endmacro %}