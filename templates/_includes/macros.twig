{% macro setBackgroundImage(params) %}
	{% set defaultsParams = {
		image: null,
		selector: null,
		single: false,
		webp: true,
	} %}

	{# Override (overwrite) defaults with passed parameters #}
	{% set options = defaultsParams|merge(params) %}
	{% set ret %}{% include "_includes/macros/setBackgroundImage" with options %}{% endset %}

	{% return ret|trim %}
{% endmacro %}

