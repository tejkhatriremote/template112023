<div class="container col-12 col-lg-8 mb-32">
    <nav aria-label="Page navigation">
        <ul class="pagination pagination-sm justify-content-center align-items-center">
            {% if pageInfo.prevUrl %}
            <li class="page-item">
                <a href="{{ pageInfo.prevUrl }}" class="page-link" tabindex="0"><svg width="20" height="25" fill="#69a134" style="margin-top: 3px;"><use xlink:href="#arrow-left"></use></svg>Prev</a>
            </li>
            {% endif %}

            <li class="page-item me-0" aria-current="page">
                <span class="current">
                    {{ 'Page ' ~ pageInfo.currentPage ~ ' of ' }}
                </span>
            </li>

            {% if pageInfo.totalPages %}
            <li class="ms-10" aria-current="page">
                <span>
                    {{ pageInfo.totalPages }}
                </span>
            </li>
            {% endif %}

            {% if pageInfo.nextUrl %}
            <li class="page-item">
                <a href="{{ pageInfo.nextUrl }}" class="page-link load-next" tabindex="0">Next<svg width="20" height="25" fill="#69a134" style="margin-top: 3px;"><use xlink:href="#arrow-right"></use></svg></a>
            </li>
            {% endif %}
        </ul>
      </nav>
</div>